#阶乘函数
def r(a):
    sum=1
    for i in range(1,a+1):
        sum*=i
    return sum

i=1
f=-1
s3=0
num=0
n=int(input("输入多项式项数："))
x=float(input("输入一个弧度值（x的值）："))
while True:
    f=f*(-1)
    g=2*i-1
    b=r(g)
    t=2*i-1
    m=pow(x,t)
    s3+=m*f/b
    i+=1
    num+=1
    if(num==n):
        print(s3)
        break
